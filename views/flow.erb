<h1><%= @site.domain %></h1>

<h2>Flow for <%= Transformative::Post::TYPES[@flow.post_type_id] %></h2>
<div>
  <form action="/<%= @site.domain %>/flows" method="post">
    <div>
      <input type="text" name="name" placeholder="name">
    </div><div>
      <label><input type="checkbox" name="allow_media" value="true">handle media?</label>
      <label><input type="checkbox" name="allow_meta" value="true">handle metadata pings?</label>
      <label>Store post via <select name="store_id">
        <% @site.stores.each do |store| %>
        <option value="<%= store.id %>"<%= ' selected' if (store.id == @flow.store_id) %>>
          <strong><%= store.type_desc %></strong>: <%= store.location %>
        </option>
        <% end %>
      </select></label>
    </div><div>
      <label>
        Path template
        <textarea name="path_template" cols="80" rows="1"><%= @flow.path_template %></textarea>
      </label>
    </div><div>
      <label>
        URL template
        <textarea name="path_template" cols="80" rows="1"><%= @flow.url_template %></textarea>
      </label>
    </div><div>
      <label>
        Content template
        <textarea name="content_template" cols="80" rows="25"><%= @flow.content_template %></textarea>
      </label>
    </div><div>
      <button type="submit">Update</button>
    </div>
  </form>
</div>
